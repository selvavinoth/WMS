@model CyGateWMS.ViewModels.ReportViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_DashBoard_Layout.cshtml";
}


<hr />
<div class="header">
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Reports">Report</a></li>
        <li class="active">@Model.TicketNo</li>
    </ol>

</div>

<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">

                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">


                                <tbody>
                                    <tr class="gradeA odd">
                                        <td class="sorting_1">Ticket No</td>
                                        <td class="center ">@Html.DisplayFor(model => model.TicketNo)</td>
                                    </tr>
                                    <tr class="gradeA even">
                                        <td class="sorting_1"> Description</td>
                                        <td class="center ">@Html.DisplayFor(model => model.Description)</td>
                                    </tr>
                                    <tr class="gradeA odd">
                                        <td class="sorting_1"> Category</td>
                                        <td class="center ">@Html.DisplayFor(model => model.CategoryName)</td>
                                    </tr>
                                    <tr class="gradeA even">
                                        <td class="sorting_1"> Type</td>
                                        <td class="center ">@Html.DisplayFor(model => model.TypeName)</td>
                                    </tr>
                                    <tr class="gradeA odd">
                                        <td class="sorting_1"> Shift</td>
                                        <td class="center ">@(Model.ShiftName)</td>
                                    </tr>
                                    <tr class="gradeA even">
                                        <td class="sorting_1"> Arrival Time</td>
                                        <td class="center ">@Model.ArrivalTime?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    </tr>
                                    <tr class="gradeA odd">
                                        <td class="sorting_1"> Start Time</td>
                                        <td class="center ">@Model.StartTime?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    </tr>
                                    <tr class="gradeA even">
                                        <td class="sorting_1"> End Time</td>
                                        <td class="center ">@Model.EndTime?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    </tr>
                                    <tr class="gradeA odd">
                                        <td class="sorting_1"> Time Spent</td>
                                        <td class="center ">@(Model.TimeSpent)</td>
                                    </tr>
                                    <tr class="gradeA even">
                                        <td class="sorting_1"> User</td>
                                        <td class="center ">@Html.DisplayFor(model => model.UserName)</td>
                                    </tr>
                                </tbody>
                            </table><div class="row">
                            </div>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.ReportID">Edit</a> |
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
</div>

