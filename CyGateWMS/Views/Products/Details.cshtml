@model CyGateWMS.Models.Products

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_DashBoard_Layout.cshtml";
}


<hr />
<div class="header">
    <ol class="breadcrumb">
        <li><a asp-action="Index" asp-controller="Products">Products</a></li>
        <li class="active">@Model.ProductName</li>
    </ol>

</div>

<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">

                            <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">


                                <tbody>
                                    <tr class="gradeA odd">
                                        <td class="sorting_1"> @Html.DisplayNameFor(model => model.ProductName)</td>
                                        <td class="center ">@Html.DisplayFor(model => model.ProductName)</td>
                                    </tr>
                                    <tr class="gradeA even">
                                        <td class="sorting_1"> @Html.DisplayNameFor(model => model.ProductDescription)</td>
                                        <td class="center ">@Html.DisplayFor(model => model.ProductDescription)</td>
                                    </tr>
                                    <tr class="gradeA odd">
                                        <td class="sorting_1"> @Html.DisplayNameFor(model => model.ProductPrice)</td>
                                        <td class="center ">@Html.DisplayFor(model => model.ProductPrice)</td>
                                    </tr>
                                    <tr class="gradeA even">
                                        <td class="sorting_1"> @Html.DisplayNameFor(model => model.CreatedOn)</td>
                                        <td class="center ">@Html.DisplayFor(model => model.CreatedOn)</td>
                                    </tr>
                                </tbody>
                            </table><div class="row">
                            </div>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
                            <a asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </div>
                <!--End Advanced Tables -->
            </div>
        </div>
    </div>
</div>